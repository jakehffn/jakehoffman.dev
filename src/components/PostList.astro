---
import FormattedDate from "./FormattedDate.astro";

interface Props {
    posts: any;
}

const { posts } = Astro.props;
---
<ul class="grid grid-cols-[max-content_max-content] pl-0">
    {
        posts.map((post) => (
            <span class="italic pr-8"><FormattedDate date={post.data.pubDate}/></span>
            <a href={`/posts/${post.slug}/`} class="underline">{post.data.title}</a>
        ))
    }
</ul>