---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
    <body class="font-serif bg-main-bg flex justify-center w-full pt-8 min-h-screen">
        <content class="text-main-text flex flex-col p-4 w-full lg:w-2/3 xl:w-1/2">
            <div class="flex-grow flex flex-col">
                <Header />
                <div class="w-full pt-4 mb-48">
                    <slot />
                </div>
                <div class="w-1/6 xl:w-[12.5%]"></div>
            </div>
            <Footer />
        </content>
    </body>
</html>